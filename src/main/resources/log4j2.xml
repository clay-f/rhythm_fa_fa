<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="logfile">logs/log.log</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%style{%d{ISO8601}} %highlight{%-5level }[%style{%t}{bright,blue}] %style{%C{1.}}{bright,yellow}: %msg%n%throwable"/>
        </Console>
        <RollingFile name="RollFileAppender" filename="${logfile}" append="false"
                     immediateFlush="false"
                     filePattern="logs/application-%d{yyyy-MM-dd}-%i.log.xz">
            <PatternLayout
                    pattern="%d{ISO8601} %-5p [%t] %c{1.}: %m%n%throwable"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy fileIndex="nomax"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
<!--        <AsyncLogger name="netty.disk.error.test" level="info" includeLocation="true" additivity="true">-->
<!--            <AppenderRef ref="RollFileAppender"/>-->
<!--        </AsyncLogger>-->
    </Loggers>
</Configuration>